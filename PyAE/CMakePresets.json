{
    "version": 6,
    "cmakeMinimumRequired": {
        "major": 3,
        "minor": 21,
        "patch": 0
    },
    "configurePresets": [
        {
            "name": "base",
            "hidden": true,
            "generator": "Visual Studio 17 2022",
            "architecture": {
                "value": "x64",
                "strategy": "set"
            },
            "binaryDir": "${sourceDir}/build/${presetName}",
            "cacheVariables": {
                "CMAKE_CXX_STANDARD": "17",
                "CMAKE_CXX_STANDARD_REQUIRED": "ON"
            }
        },
        {
            "name": "debug",
            "displayName": "Debug",
            "description": "Debug build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Debug",
                "PYAE_ENABLE_REPL": "ON"
            }
        },
        {
            "name": "release",
            "displayName": "Release",
            "description": "Release build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "PYAE_ENABLE_REPL": "OFF"
            }
        },
        {
            "name": "release-repl",
            "displayName": "Release with REPL",
            "description": "Release build with REPL enabled",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "PYAE_ENABLE_REPL": "ON"
            }
        },
        {
            "name": "ci",
            "displayName": "CI Build",
            "description": "Continuous Integration build",
            "inherits": "base",
            "cacheVariables": {
                "CMAKE_BUILD_TYPE": "Release",
                "PYAE_ENABLE_REPL": "OFF"
            }
        }
    ],
    "buildPresets": [
        {
            "name": "debug-build",
            "displayName": "Debug Build",
            "configurePreset": "debug",
            "configuration": "Debug"
        },
        {
            "name": "release-build",
            "displayName": "Release Build",
            "configurePreset": "release",
            "configuration": "Release"
        },
        {
            "name": "release-repl-build",
            "displayName": "Release with REPL Build",
            "configurePreset": "release-repl",
            "configuration": "Release"
        },
        {
            "name": "ci-build",
            "displayName": "CI Build",
            "configurePreset": "ci",
            "configuration": "Release"
        }
    ],
    "testPresets": [
        {
            "name": "debug-test",
            "displayName": "Debug Test",
            "configurePreset": "debug",
            "output": {
                "outputOnFailure": true
            }
        },
        {
            "name": "release-test",
            "displayName": "Release Test",
            "configurePreset": "release",
            "output": {
                "outputOnFailure": true
            }
        }
    ],
    "packagePresets": [
        {
            "name": "release-package",
            "displayName": "Release Package",
            "configurePreset": "release",
            "generators": ["ZIP"]
        }
    ],
    "workflowPresets": [
        {
            "name": "dev",
            "displayName": "Development Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "debug"
                },
                {
                    "type": "build",
                    "name": "debug-build"
                }
            ]
        },
        {
            "name": "release",
            "displayName": "Release Workflow",
            "steps": [
                {
                    "type": "configure",
                    "name": "release"
                },
                {
                    "type": "build",
                    "name": "release-build"
                },
                {
                    "type": "package",
                    "name": "release-package"
                }
            ]
        }
    ]
}
